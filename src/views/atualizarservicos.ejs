<%- include('components/head'); %>

<%- include('components/header'); %>

    <div class="container">

        <h1>Atualizar Serviço</h1>
        
        <form action="./atualizar/<%=servico.id%>" method="post">
            <div class="form-group">
                <label for="titulo">Título</label>
                <input type="text" class="form-control" id="titulo" name="titulo" value="<%=servico.titulo%>" />
            </div>
            <div class="form-group">
                <label for="descricao">Descrição</label>
                <input type="text" class="form-control" id="descricao" name="descricao" value="<%=servico.descricao%>" />
            </div>
            <div class="form-group">
                <label for="data">Data</label>
                <input class="form-control" type="datetime-local" name="data" id="data" value="<%=servico.data%>" />
            </div>

            <button type="submit" class="btn btn-primary mb-5">Atualizar</button>

          </form>

    </div>

<%- include('components/footer'); %>