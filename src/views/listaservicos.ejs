<%- include('components/head'); %>

<%- include('components/header'); %>

    <div class="container">
        <h1>Serviços</h1>
        
        <a href="servicos/novo" class="mt-4 btn btn-lg btn-primary">Adicionar Serviço</a>

        <table class="table mt-4 mb-5">
            <thead>
                <tr>
                    <th scope="col">Título</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Data</th>
                    <th scope="col">Opções</th>
                </tr>
            </thead>
            <tbody>
                <% servicos.forEach((el) =>{ %>
                <tr>
                    <th scope="row"><%=el.titulo %></th>
                    <td><%=el.descricao %></td>
                    <td><%=el.data %></td>
                    <td><a href="servicos/<%=el.id%>">editar</a> / <a href="servicos/excluir/<%=el.id%>">excluir</a></td>
                </tr>
                <%})%>
            </tbody>
        </table>

    </div>

<%- include('components/footer'); %>